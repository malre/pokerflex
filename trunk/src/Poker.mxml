			<mx:AddChild relativeTo="{myCanvas}" position="lastChild">
				<mx:Button x="250.9" y="319.2" label="准备好了" width="73.7" height="53.05" id="btnReady" click="gameReadyClicked(event)" icon="@Embed(source='../res/btnSelfread.png')"/>
			</mx:AddChild>
			<mx:AddChild relativeTo="{myCanvas}" position="lastChild">
