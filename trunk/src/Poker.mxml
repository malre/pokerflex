			<mx:SetProperty target="{myCanvas}" name="height" value="560"/>
			<mx:SetStyle target="{myCanvas}" name="borderStyle" value="inset"/>
			<mx:SetStyle target="{myCanvas}" name="borderColor" value="#B7BABC"/>
