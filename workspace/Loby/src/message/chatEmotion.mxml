				var str:String = event.currentTarget.id;
				
				if(nType == 0)
				{
					cv = FlexGlobals.topLevelApplication.customcomponent31.inputboxLobby;
				}
				else if(nType == 1)
				{
					cv = FlexGlobals.topLevelApplication.gamePoker.inputboxGame;
				}
				cv.insertEmotion(int(str.substr(1, 2)));
				this.visible = false;
			}
			
