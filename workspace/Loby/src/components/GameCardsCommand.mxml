<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:s="library://ns.adobe.com/flex/spark" xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:d="http://ns.adobe.com/fxg/2008/dt" xmlns:th="http://ns.adobe.com/thermo/2009" xmlns:components="components.*">

	<fx:Script>
		<![CDATA[
			import poker.Game;
			protected function sendCardsClicked(event:Event):void
			{
				btnSendCards.enabled = false;
				// 发送出牌的消息，如果失败，将会自动重发，
				Game.Instance.sendcards();
			}

			protected function discardClicked(event:Event):void
			{
				btnDiscard.enabled = false;
				Game.Instance.pass();
			}
			
		]]>
	</fx:Script>

	<s:BitmapImage source="@Embed('/assets/ButtonBg.png')" resizeMode="scale" d:userLabel="ButtonBG" d:locked="true"/>
	<s:Button id="btnSendCards" label="出牌" x="40" y="2" skinClass="components.Button_Chupai" click="sendCardsClicked(event)"/>
	<s:Button id="btnDiscard" label="放弃" x="99" y="2" skinClass="components.Button_Chupai" click="discardClicked(event)"/>
	<s:Button id="btnHint" label="提示" x="159" y="2" skinClass="components.Button_Chupai" enabled="false"/>
	<fx:Private>
	</fx:Private>
</s:Group>