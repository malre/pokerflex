	<s:TextArea x="12" y="494" id="lobbyinputbox" includeIn="State3" width="140" height="17" color="#FFFFFF" baseColor="#f6edae" editable="true" keyDown="lobbyinputbox_keyDownHandler(event)" paste="lobbyinputbox_pasteHandler(event)" contentBackgroundAlpha="0" maxChars="60" focusEnabled="false"/>	
	<s:Button includeIn="State3" x="151" y="493" skinClass="components.Button_GameTalk" click="lobbySendMsg(event)" toolTip="发送聊天对话"/>
	<!--</s:Group>-->	
	<message:chatSetting x="99" y="456" id="lobbychatsetting" visible="false" includeIn="State3"/>
